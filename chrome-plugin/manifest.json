{
  "manifest_version": 2,

  "name": "SocioScore",
  "description": "This extension protects from harassment",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": [
        "lib/jquery-3.1.1.min.js",
        "js/api.js",
        "js/main.js"
      ],
      "css": [
        "css/main.css"
      ]
    }
  ]
}